{{!-- Route Efficiency Report Template --}}
<div class="school-transport-route-efficiency-report">
    {{!-- Page Header --}}
    <div class="page-header">
        <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-4">
                <div class="w-12 h-12 rounded-full bg-orange-100 flex items-center justify-center">
                    <FaIcon @icon="tachometer-alt" class="text-orange-600 text-xl" />
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">Route Efficiency Report</h1>
                    <p class="text-gray-600">Route performance, delays, and optimization metrics</p>
                </div>
            </div>
            <div class="flex space-x-3">
                <button class="btn btn-outline" {{on "click" this.exportReport}}>
                    <FaIcon @icon="download" class="mr-2" />
                    Export
                </button>
                <LinkTo @route="school-transport.reports.index" class="btn btn-outline">
                    <FaIcon @icon="arrow-left" class="mr-2" />
                    Back to Reports
                </LinkTo>
            </div>
        </div>
    </div>

    {{!-- Filters --}}
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Date Range</label>
                <select class="form-select" {{on "change" this.updateDateRange}}>
                    <option value="today">Today</option>
                    <option value="yesterday">Yesterday</option>
                    <option value="this_week">This Week</option>
                    <option value="last_week">Last Week</option>
                    <option value="this_month">This Month</option>
                    <option value="last_month">Last Month</option>
                    <option value="custom">Custom Range</option>
                </select>
            </div>
            {{#if (eq this.dateRange "custom")}}
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
                <Input @type="date" @value={{this.startDate}} class="form-input" {{on "change" this.updateStartDate}} />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
                <Input @type="date" @value={{this.endDate}} class="form-input" {{on "change" this.updateEndDate}} />
            </div>
            {{/if}}
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Route</label>
                <select class="form-select" {{on "change" this.updateRouteFilter}}>
                    <option value="">All Routes</option>
                    {{#each this.routes as |route|}}
                    <option value={{route.id}}>{{route.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Metric</label>
                <select class="form-select" {{on "change" this.updateMetricFilter}}>
                    <option value="all">All Metrics</option>
                    <option value="on_time">On-Time Performance</option>
                    <option value="delays">Delays</option>
                    <option value="capacity">Capacity Utilization</option>
                    <option value="distance">Distance Efficiency</option>
                </select>
            </div>
        </div>
        <div class="flex justify-end mt-4">
            <button class="btn btn-primary" {{on "click" this.applyFilters}}>
                <FaIcon @icon="filter" class="mr-2" />
                Apply Filters
            </button>
        </div>
    </div>

    {{!-- Key Metrics --}}
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
                <div class="w-12 h-12 rounded-full bg-green-100 flex items-center justify-center">
                    <FaIcon @icon="clock" class="text-green-600 text-xl" />
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">On-Time Rate</p>
                    <p class="text-2xl font-bold text-gray-900">{{this.efficiencyMetrics.onTimeRate}}%</p>
                    <p class="text-xs text-green-600">+{{this.efficiencyMetrics.onTimeChange}}% from last period</p>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
                <div class="w-12 h-12 rounded-full bg-red-100 flex items-center justify-center">
                    <FaIcon @icon="exclamation-triangle" class="text-red-600 text-xl" />
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Avg Delay</p>
                    <p class="text-2xl font-bold text-gray-900">{{this.efficiencyMetrics.avgDelay}} min</p>
                    <p class="text-xs text-red-600">{{this.efficiencyMetrics.delayChange}} min from last period</p>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
                <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center">
                    <FaIcon @icon="users" class="text-blue-600 text-xl" />
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Capacity Usage</p>
                    <p class="text-2xl font-bold text-gray-900">{{this.efficiencyMetrics.capacityUsage}}%</p>
                    <p class="text-xs text-blue-600">{{this.efficiencyMetrics.capacityChange}}% from last period</p>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
                <div class="w-12 h-12 rounded-full bg-purple-100 flex items-center justify-center">
                    <FaIcon @icon="route" class="text-purple-600 text-xl" />
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Route Efficiency</p>
                    <p class="text-2xl font-bold text-gray-900">{{this.efficiencyMetrics.routeEfficiency}}%</p>
                    <p class="text-xs text-purple-600">{{this.efficiencyMetrics.efficiencyChange}}% from last period</p>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        {{!-- Performance Chart --}}
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">Route Performance Trends</h2>
            </div>
            <div class="p-6">
                <div class="h-64 flex items-center justify-center">
                    {{!-- Chart placeholder --}}
                    <div class="text-center text-gray-500">
                        <FaIcon @icon="chart-line" class="text-4xl mb-2" />
                        <p>Performance trend chart will be displayed here</p>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Delay Analysis --}}
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">Delay Analysis</h2>
            </div>
            <div class="p-6">
                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600">Routes with delays > 15 min:</span>
                        <span class="text-sm font-medium text-red-600">{{this.delayAnalysis.majorDelays}} routes</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600">Routes with delays 5-15 min:</span>
                        <span class="text-sm font-medium text-yellow-600">{{this.delayAnalysis.moderateDelays}}
                            routes</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600">Routes on time:</span>
                        <span class="text-sm font-medium text-green-600">{{this.delayAnalysis.onTimeRoutes}}
                            routes</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600">Average delay across all routes:</span>
                        <span class="text-sm font-medium text-gray-900">{{this.delayAnalysis.avgDelay}} min</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{!-- Route Performance Table --}}
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
            <h2 class="text-lg font-semibold text-gray-900">Route Performance Details</h2>
            <div class="flex space-x-2">
                <Input @type="text" @value={{this.searchQuery}} @placeholder="Search routes..."
                    class="form-input text-sm" {{on "input" this.updateSearch}} />
                <select class="form-select text-sm" {{on "change" this.updateSortBy}}>
                    <option value="name">Route Name</option>
                    <option value="on_time_rate">On-Time Rate</option>
                    <option value="avg_delay">Avg Delay</option>
                    <option value="capacity_usage">Capacity Usage</option>
                    <option value="efficiency">Efficiency</option>
                </select>
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Route
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            On-Time Rate</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Avg
                            Delay</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Capacity Usage</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Distance</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Efficiency</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Status</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {{#each this.routePerformance as |route|}}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center mr-3">
                                    <FaIcon @icon="route" class="text-blue-600 text-sm" />
                                </div>
                                <div>
                                    <div class="text-sm font-medium text-gray-900">{{route.name}}</div>
                                    <div class="text-sm text-gray-500">{{route.stops}} stops â€¢ {{route.students}}
                                        students</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">{{route.on_time_rate}}%</div>
                            <div class="w-full bg-gray-200 rounded-full h-2 mt-1">
                                <div class="bg-green-600 h-2 rounded-full" style="width: {{route.on_time_rate}}%"></div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="text-sm text-gray-900">{{route.avg_delay}} min</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">{{route.capacity_usage}}%</div>
                            <div class="w-full bg-gray-200 rounded-full h-2 mt-1">
                                <div class="bg-blue-600 h-2 rounded-full" style="width: {{route.capacity_usage}}%">
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            {{route.distance}} miles
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="text-sm text-gray-900">{{route.efficiency}}%</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {{#if (gte route.on_time_rate 95)}}
                            <span
                                class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                <FaIcon @icon="check-circle" class="mr-1" />
                                Excellent
                            </span>
                            {{else if (gte route.on_time_rate 85)}}
                            <span
                                class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                <FaIcon @icon="exclamation-triangle" class="mr-1" />
                                Good
                            </span>
                            {{else}}
                            <span
                                class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                <FaIcon @icon="times-circle" class="mr-1" />
                                Needs Attention
                            </span>
                            {{/if}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        {{!-- Pagination --}}
        {{#if (gt this.routePerformance.length 0)}}
        <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-between">
            <div class="text-sm text-gray-700">
                Showing {{this.startIndex}} to {{this.endIndex}} of {{this.totalRoutes}} routes
            </div>
            <div class="flex space-x-2">
                <button class="btn btn-outline btn-sm" disabled={{not this.hasPreviousPage}} {{on "click"
                    this.previousPage}}>
                    <FaIcon @icon="chevron-left" class="mr-1" />
                    Previous
                </button>
                <button class="btn btn-outline btn-sm" disabled={{not this.hasNextPage}} {{on "click" this.nextPage}}>
                    Next
                    <FaIcon @icon="chevron-right" class="ml-1" />
                </button>
            </div>
        </div>
        {{/if}}
    </div>

    {{!-- Optimization Recommendations --}}
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 mt-6">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Optimization Recommendations</h2>
        </div>
        <div class="p-6">
            <div class="space-y-4">
                {{#each this.recommendations as |recommendation|}}
                <div class="flex items-start space-x-3 p-4 border border-gray-200 rounded-lg">
                    {{#if (eq recommendation.type "delay")}}
                    <div class="w-8 h-8 rounded-full bg-red-100 flex items-center justify-center flex-shrink-0">
                        <FaIcon @icon="clock" class="text-red-600 text-sm" />
                    </div>
                    {{else if (eq recommendation.type "capacity")}}
                    <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center flex-shrink-0">
                        <FaIcon @icon="users" class="text-blue-600 text-sm" />
                    </div>
                    {{else if (eq recommendation.type "efficiency")}}
                    <div class="w-8 h-8 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0">
                        <FaIcon @icon="tachometer-alt" class="text-green-600 text-sm" />
                    </div>
                    {{else}}
                    <div class="w-8 h-8 rounded-full bg-yellow-100 flex items-center justify-center flex-shrink-0">
                        <FaIcon @icon="lightbulb" class="text-yellow-600 text-sm" />
                    </div>
                    {{/if}}
                    <div class="flex-1">
                        <h4 class="text-sm font-medium text-gray-900">{{recommendation.title}}</h4>
                        <p class="text-sm text-gray-600 mt-1">{{recommendation.description}}</p>
                        {{#if recommendation.routes}}
                        <div class="mt-2">
                            <span class="text-xs text-gray-500">Affected routes:</span>
                            <div class="flex flex-wrap gap-1 mt-1">
                                {{#each recommendation.routes as |route|}}
                                <span
                                    class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                    {{route}}
                                </span>
                                {{/each}}
                            </div>
                        </div>
                        {{/if}}
                    </div>
                    <div class="flex-shrink-0">
                        {{#if (eq recommendation.priority "high")}}
                        <span
                            class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                            High Priority
                        </span>
                        {{else if (eq recommendation.priority "medium")}}
                        <span
                            class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                            Medium Priority
                        </span>
                        {{else}}
                        <span
                            class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            Low Priority
                        </span>
                        {{/if}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

    {{!-- Empty State --}}
    {{#if (eq this.routePerformance.length 0)}}
    <div class="text-center py-12">
        <div class="w-24 h-24 rounded-full bg-gray-100 flex items-center justify-center mx-auto mb-4">
            <FaIcon @icon="tachometer-alt" class="text-gray-400 text-3xl" />
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No route performance data found</h3>
        <p class="text-gray-600">
            {{#if this.searchQuery}}
            No routes match your search criteria.
            {{else}}
            No route performance data available for the selected date range.
            {{/if}}
        </p>
    </div>
    {{/if}}
</div>