<div class="dashboard-card bg-white border rounded p-4">
    <div class="flex items-start justify-between">
        <div>
            <div class="text-xs text-gray-500">{{@subtitle}}</div>
            <div class="text-2xl font-semibold">{{@value}}</div>
            {{#if @description}}<div class="text-xs text-gray-500 mt-1">{{@description}}</div>{{/if}}
        </div>
        {{#if @icon}}
        <div class="icon bg-gray-50 rounded-full p-2">
            <FaIcon @icon={{@icon}} />
        </div>
        {{/if}}
    </div>
    {{#if @footer}}
    <div class="mt-2 text-xs text-gray-500">{{@footer}}</div>
    {{/if}}
</div>