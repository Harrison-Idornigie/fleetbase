{{!-- Assignment View Template --}}
<div class="school-transport-assignment-view">
    {{!-- Page Header --}}
    <div class="page-header">
        <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-4">
                <div class="w-12 h-12 rounded-full bg-green-100 flex items-center justify-center">
                    <FaIcon @icon="link" class="text-green-600 text-xl" />
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">Assignment Details</h1>
                    <p class="text-gray-600">{{this.assignment.student.full_name}} → {{this.assignment.route.name}}</p>
                </div>
            </div>
            <div class="flex space-x-3">
                <LinkTo @route="school-transport.assignments.edit" @model={{this.assignment.id}}
                    class="btn btn-outline">
                    <FaIcon @icon="edit" class="mr-2" />
                    Edit
                </LinkTo>
                <LinkTo @route="school-transport.assignments.index" class="btn btn-outline">
                    <FaIcon @icon="arrow-left" class="mr-2" />
                    Back to Assignments
                </LinkTo>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        {{!-- Main Content --}}
        <div class="lg:col-span-2 space-y-6">
            {{!-- Assignment Overview --}}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Assignment Overview</h2>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Student Information
                            </h3>
                            <div class="mt-3 flex items-center space-x-4">
                                {{#if this.assignment.student.photo_url}}
                                <img src={{this.assignment.student.photo_url}} alt={{this.assignment.student.full_name}}
                                    class="w-16 h-16 rounded-full object-cover" />
                                {{else}}
                                <div class="w-16 h-16 rounded-full bg-gray-200 flex items-center justify-center">
                                    <FaIcon @icon="user" class="text-gray-500 text-xl" />
                                </div>
                                {{/if}}
                                <div>
                                    <h4 class="text-lg font-medium text-gray-900">{{this.assignment.student.full_name}}
                                    </h4>
                                    <p class="text-sm text-gray-600">Student ID: {{this.assignment.student.student_id}}
                                    </p>
                                    <p class="text-sm text-gray-600">Grade {{this.assignment.student.grade}} •
                                        {{this.assignment.student.school}}</p>
                                </div>
                            </div>
                        </div>
                        <div>
                            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Route Information</h3>
                            <div class="mt-3 flex items-center space-x-4">
                                <div class="w-16 h-16 rounded-full bg-blue-100 flex items-center justify-center">
                                    <FaIcon @icon="route" class="text-blue-600 text-xl" />
                                </div>
                                <div>
                                    <h4 class="text-lg font-medium text-gray-900">{{this.assignment.route.name}}</h4>
                                    <p class="text-sm text-gray-600">{{this.assignment.route.description}}</p>
                                    <p class="text-sm text-gray-600">Type: {{capitalize
                                        this.assignment.route.route_type}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Schedule & Locations --}}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Schedule & Locations</h2>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Pickup Details</h3>
                            <dl class="mt-3 space-y-2">
                                <div class="flex justify-between">
                                    <dt class="text-sm text-gray-600">Time:</dt>
                                    <dd class="text-sm font-medium text-gray-900">
                                        {{#if this.assignment.pickup_time}}
                                        {{this.assignment.pickup_time}}
                                        {{else}}
                                        <span class="text-gray-400">Route default</span>
                                        {{/if}}
                                    </dd>
                                </div>
                                <div class="flex justify-between">
                                    <dt class="text-sm text-gray-600">Location:</dt>
                                    <dd class="text-sm font-medium text-gray-900">
                                        {{#if this.assignment.pickup_location}}
                                        {{this.assignment.pickup_location}}
                                        {{else}}
                                        <span class="text-gray-400">Student's home address</span>
                                        {{/if}}
                                    </dd>
                                </div>
                            </dl>
                        </div>
                        <div>
                            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Dropoff Details</h3>
                            <dl class="mt-3 space-y-2">
                                <div class="flex justify-between">
                                    <dt class="text-sm text-gray-600">Time:</dt>
                                    <dd class="text-sm font-medium text-gray-900">
                                        {{#if this.assignment.dropoff_time}}
                                        {{this.assignment.dropoff_time}}
                                        {{else}}
                                        <span class="text-gray-400">Route default</span>
                                        {{/if}}
                                    </dd>
                                </div>
                                <div class="flex justify-between">
                                    <dt class="text-sm text-gray-600">Location:</dt>
                                    <dd class="text-sm font-medium text-gray-900">
                                        {{#if this.assignment.dropoff_location}}
                                        {{this.assignment.dropoff_location}}
                                        {{else}}
                                        <span class="text-gray-400">Student's home address</span>
                                        {{/if}}
                                    </dd>
                                </div>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Transportation Details --}}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Transportation Details</h2>
                </div>
                <div class="p-6">
                    {{#if this.assignment.bus}}
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Bus Information</h3>
                            <div class="mt-3 flex items-center space-x-4">
                                <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center">
                                    <FaIcon @icon="bus" class="text-blue-600" />
                                </div>
                                <div>
                                    <h4 class="text-md font-medium text-gray-900">{{this.assignment.bus.name}}</h4>
                                    <p class="text-sm text-gray-600">License: {{this.assignment.bus.license_plate}}</p>
                                    <p class="text-sm text-gray-600">Capacity: {{this.assignment.bus.capacity}} seats
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div>
                            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Driver Information
                            </h3>
                            <div class="mt-3 flex items-center space-x-4">
                                <div class="w-12 h-12 rounded-full bg-green-100 flex items-center justify-center">
                                    <FaIcon @icon="user" class="text-green-600" />
                                </div>
                                <div>
                                    <h4 class="text-md font-medium text-gray-900">{{this.assignment.driver.name}}</h4>
                                    <p class="text-sm text-gray-600">{{this.assignment.driver.phone}}</p>
                                    <p class="text-sm text-gray-600">{{this.assignment.driver.email}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{else}}
                    <div class="text-center py-8">
                        <FaIcon @icon="bus" class="text-4xl text-gray-300 mb-4" />
                        <h3 class="text-lg font-medium text-gray-900 mb-2">No vehicle assigned</h3>
                        <p class="text-gray-600">This assignment is not yet linked to a specific bus and driver.</p>
                    </div>
                    {{/if}}
                </div>
            </div>

            {{!-- Assignment History --}}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Assignment History</h2>
                </div>
                <div class="p-6">
                    <div class="space-y-4">
                        <div class="flex items-center space-x-4">
                            <div class="w-8 h-8 rounded-full bg-green-100 flex items-center justify-center">
                                <FaIcon @icon="plus" class="text-green-600 text-sm" />
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-medium text-gray-900">Assignment Created</p>
                                <p class="text-sm text-gray-600">{{moment-format this.assignment.created_at "MMM DD,
                                    YYYY 'at' h:mm A"}}</p>
                            </div>
                        </div>

                        {{#if this.assignment.updated_at}}
                        <div class="flex items-center space-x-4">
                            <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center">
                                <FaIcon @icon="edit" class="text-blue-600 text-sm" />
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-medium text-gray-900">Assignment Updated</p>
                                <p class="text-sm text-gray-600">{{moment-format this.assignment.updated_at "MMM DD,
                                    YYYY 'at' h:mm A"}}</p>
                            </div>
                        </div>
                        {{/if}}

                        {{#each this.assignment.status_changes as |change|}}
                        <div class="flex items-center space-x-4">
                            <div class="w-8 h-8 rounded-full bg-yellow-100 flex items-center justify-center">
                                <FaIcon @icon="exchange-alt" class="text-yellow-600 text-sm" />
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-medium text-gray-900">Status Changed to {{capitalize
                                    change.new_status}}</p>
                                <p class="text-sm text-gray-600">{{moment-format change.changed_at "MMM DD, YYYY 'at'
                                    h:mm A"}}</p>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>

        {{!-- Sidebar --}}
        <div class="space-y-6">
            {{!-- Assignment Status --}}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Assignment Status</h2>
                </div>
                <div class="p-6">
                    <div class="text-center">
                        {{#if this.assignment.is_active}}
                        <div class="w-16 h-16 rounded-full bg-green-100 flex items-center justify-center mx-auto mb-4">
                            <FaIcon @icon="check-circle" class="text-green-600 text-2xl" />
                        </div>
                        <h3 class="text-lg font-medium text-gray-900 mb-2">Active</h3>
                        <p class="text-sm text-gray-600">This assignment is currently active and operational.</p>
                        {{else if this.assignment.is_standby}}
                        <div class="w-16 h-16 rounded-full bg-yellow-100 flex items-center justify-center mx-auto mb-4">
                            <FaIcon @icon="clock" class="text-yellow-600 text-2xl" />
                        </div>
                        <h3 class="text-lg font-medium text-gray-900 mb-2">Standby</h3>
                        <p class="text-sm text-gray-600">This student is on the standby list for this route.</p>
                        {{else}}
                        <div class="w-16 h-16 rounded-full bg-red-100 flex items-center justify-center mx-auto mb-4">
                            <FaIcon @icon="pause-circle" class="text-red-600 text-2xl" />
                        </div>
                        <h3 class="text-lg font-medium text-gray-900 mb-2">Inactive</h3>
                        <p class="text-sm text-gray-600">This assignment is currently inactive.</p>
                        {{/if}}
                    </div>

                    <div class="mt-6 space-y-3">
                        <button class="w-full btn btn-outline text-left" {{on "click" this.toggleStatus}}>
                            {{#if this.assignment.is_active}}
                            <FaIcon @icon="pause" class="mr-2" />
                            Deactivate Assignment
                            {{else}}
                            <FaIcon @icon="play" class="mr-2" />
                            Activate Assignment
                            {{/if}}
                        </button>
                        <button class="w-full btn btn-outline text-left" {{on "click" this.moveToStandby}}>
                            <FaIcon @icon="clock" class="mr-2" />
                            Move to Standby
                        </button>
                    </div>
                </div>
            </div>

            {{!-- Quick Actions --}}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Quick Actions</h2>
                </div>
                <div class="p-4 space-y-3">
                    <LinkTo @route="school-transport.students.view" @model={{this.assignment.student.id}}
                        class="btn btn-outline w-full text-left">
                        <FaIcon @icon="user" class="mr-2" />
                        View Student Profile
                    </LinkTo>
                    <LinkTo @route="school-transport.routes.view" @model={{this.assignment.route.id}}
                        class="btn btn-outline w-full text-left">
                        <FaIcon @icon="route" class="mr-2" />
                        View Route Details
                    </LinkTo>
                    <button class="btn btn-outline w-full text-left" {{on "click" this.sendNotification}}>
                        <FaIcon @icon="bell" class="mr-2" />
                        Send Notification
                    </button>
                    <button class="btn btn-outline w-full text-left" {{on "click" this.printAssignment}}>
                        <FaIcon @icon="print" class="mr-2" />
                        Print Assignment
                    </button>
                    <button class="btn btn-outline w-full text-left" {{on "click" this.duplicateAssignment}}>
                        <FaIcon @icon="copy" class="mr-2" />
                        Duplicate Assignment
                    </button>
                </div>
            </div>

            {{!-- Attendance Summary --}}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Attendance Summary</h2>
                </div>
                <div class="p-6">
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Total Days:</span>
                            <span class="text-sm font-medium">{{this.attendanceSummary.total_days}}</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Present:</span>
                            <span
                                class="text-sm font-medium text-green-600">{{this.attendanceSummary.present_days}}</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Absent:</span>
                            <span class="text-sm font-medium text-red-600">{{this.attendanceSummary.absent_days}}</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Attendance Rate:</span>
                            <span class="text-sm font-medium">
                                {{#if this.attendanceSummary.total_days}}
                                {{percentage this.attendanceSummary.present_days this.attendanceSummary.total_days}}%
                                {{else}}
                                N/A
                                {{/if}}
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Special Notes --}}
            {{#if this.assignment.notes}}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Special Notes</h2>
                </div>
                <div class="p-6">
                    <p class="text-sm text-gray-900">{{this.assignment.notes}}</p>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>