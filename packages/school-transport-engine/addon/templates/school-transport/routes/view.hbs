{{!-- Route View Template --}}
<div class="school-transport-route-view">
    {{!-- Page Header --}}
    <div class="page-header">
        <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-4">
                <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center">
                    <FaIcon @icon="route" class="text-blue-600 text-xl" />
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">{{this.route.name}}</h1>
                    <p class="text-gray-600">{{this.route.description}}</p>
                </div>
            </div>
            <div class="flex space-x-3">
                <LinkTo @route="school-transport.routes.edit" @model={{this.route.id}} class="btn btn-outline">
                    <FaIcon @icon="edit" class="mr-2" />
                    Edit
                </LinkTo>
                <LinkTo @route="school-transport.routes.index" class="btn btn-outline">
                    <FaIcon @icon="arrow-left" class="mr-2" />
                    Back to Routes
                </LinkTo>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        {{!-- Main Content --}}
        <div class="lg:col-span-2 space-y-6">
            {{!-- Route Overview --}}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Route Overview</h2>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Basic Information</h3>
                            <dl class="mt-3 space-y-2">
                                <div class="flex justify-between">
                                    <dt class="text-sm text-gray-600">Route Type:</dt>
                                    <dd class="text-sm font-medium text-gray-900 capitalize">{{this.route.route_type}}
                                    </dd>
                                </div>
                                <div class="flex justify-between">
                                    <dt class="text-sm text-gray-600">Status:</dt>
                                    <dd class="text-sm font-medium">
                                        {{#if this.route.is_active}}
                                        <span
                                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                            <FaIcon @icon="check-circle" class="mr-1" />
                                            Active
                                        </span>
                                        {{else}}
                                        <span
                                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                            <FaIcon @icon="times-circle" class="mr-1" />
                                            Inactive
                                        </span>
                                        {{/if}}
                                    </dd>
                                </div>
                                <div class="flex justify-between">
                                    <dt class="text-sm text-gray-600">Max Capacity:</dt>
                                    <dd class="text-sm font-medium text-gray-900">
                                        {{#if this.route.max_capacity}}
                                        {{this.route.max_capacity}} students
                                        {{else}}
                                        <span class="text-gray-400">Not set</span>
                                        {{/if}}
                                    </dd>
                                </div>
                                <div class="flex justify-between">
                                    <dt class="text-sm text-gray-600">Current Students:</dt>
                                    <dd class="text-sm font-medium text-gray-900">{{this.route.student_count}} assigned
                                    </dd>
                                </div>
                            </dl>
                        </div>
                        <div>
                            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Schedule</h3>
                            <dl class="mt-3 space-y-2">
                                {{#if (or (eq this.route.route_type "morning") (eq this.route.route_type "both"))}}
                                <div class="flex justify-between">
                                    <dt class="text-sm text-gray-600">Morning Start:</dt>
                                    <dd class="text-sm font-medium text-gray-900">{{this.route.morning_start_time}}</dd>
                                </div>
                                {{/if}}
                                {{#if (or (eq this.route.route_type "afternoon") (eq this.route.route_type "both"))}}
                                <div class="flex justify-between">
                                    <dt class="text-sm text-gray-600">Afternoon Start:</dt>
                                    <dd class="text-sm font-medium text-gray-900">{{this.route.afternoon_start_time}}
                                    </dd>
                                </div>
                                {{/if}}
                                <div class="flex justify-between">
                                    <dt class="text-sm text-gray-600">Duration:</dt>
                                    <dd class="text-sm font-medium text-gray-900">
                                        {{#if this.route.estimated_duration}}
                                        {{this.route.estimated_duration}} minutes
                                        {{else}}
                                        <span class="text-gray-400">Not set</span>
                                        {{/if}}
                                    </dd>
                                </div>
                                <div class="flex justify-between">
                                    <dt class="text-sm text-gray-600">Created:</dt>
                                    <dd class="text-sm font-medium text-gray-900">{{moment-format this.route.created_at
                                        "MMM DD, YYYY"}}</dd>
                                </div>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Route Map --}}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Route Map</h2>
                </div>
                <div class="p-6">
                    <div class="bg-gray-100 rounded-lg h-64 flex items-center justify-center">
                        <div class="text-center">
                            <FaIcon @icon="map-marked-alt" class="text-4xl text-gray-400 mb-2" />
                            <p class="text-gray-600">Interactive map will be displayed here</p>
                            <p class="text-sm text-gray-500">Showing route stops and waypoints</p>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Route Stops --}}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Route Stops</h2>
                </div>
                <div class="p-6">
                    {{#if this.route.stops}}
                    <div class="space-y-4">
                        {{#each this.route.stops as |stop index|}}
                        <div class="flex items-center space-x-4 p-4 border border-gray-200 rounded-lg">
                            <div
                                class="flex-shrink-0 w-10 h-10 rounded-full bg-blue-500 text-white flex items-center justify-center text-sm font-medium">
                                {{add index 1}}
                            </div>
                            <div class="flex-1">
                                <h4 class="text-sm font-medium text-gray-900">{{stop.address}}</h4>
                                {{#if stop.time}}
                                <p class="text-sm text-gray-600">Scheduled: {{stop.time}}</p>
                                {{/if}}
                            </div>
                            <div class="flex-shrink-0 text-sm text-gray-600">
                                {{#if stop.students}}
                                {{stop.students.length}} students
                                {{else}}
                                0 students
                                {{/if}}
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    {{else}}
                    <p class="text-gray-500 text-center py-8">No stops defined for this route.</p>
                    {{/if}}
                </div>
            </div>

            {{!-- Assigned Students --}}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
                    <h2 class="text-lg font-semibold text-gray-900">Assigned Students</h2>
                    <LinkTo @route="school-transport.assignments.new" @query={{hash route_id=this.route.id}}
                        class="btn btn-sm btn-primary">
                        <FaIcon @icon="plus" class="mr-1" />
                        Assign Students
                    </LinkTo>
                </div>
                <div class="p-6">
                    {{#if this.assignedStudents}}
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        {{#each this.assignedStudents as |student|}}
                        <div class="flex items-center space-x-4 p-4 border border-gray-200 rounded-lg">
                            {{#if student.photo_url}}
                            <img src={{student.photo_url}} alt={{student.full_name}}
                                class="w-12 h-12 rounded-full object-cover" />
                            {{else}}
                            <div class="w-12 h-12 rounded-full bg-gray-200 flex items-center justify-center">
                                <FaIcon @icon="user" class="text-gray-500" />
                            </div>
                            {{/if}}
                            <div class="flex-1">
                                <h4 class="text-sm font-medium text-gray-900">{{student.full_name}}</h4>
                                <p class="text-sm text-gray-600">Grade {{student.grade}} â€¢ ID: {{student.student_id}}
                                </p>
                            </div>
                            <LinkTo @route="school-transport.students.view" @model={{student.id}}
                                class="btn btn-sm btn-outline">
                                <FaIcon @icon="eye" />
                            </LinkTo>
                        </div>
                        {{/each}}
                    </div>
                    {{else}}
                    <div class="text-center py-8">
                        <FaIcon @icon="users" class="text-4xl text-gray-300 mb-4" />
                        <h3 class="text-lg font-medium text-gray-900 mb-2">No students assigned</h3>
                        <p class="text-gray-600 mb-4">Assign students to this route to get started.</p>
                        <LinkTo @route="school-transport.assignments.new" @query={{hash route_id=this.route.id}}
                            class="btn btn-primary">
                            <FaIcon @icon="plus" class="mr-2" />
                            Assign First Student
                        </LinkTo>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>

        {{!-- Sidebar --}}
        <div class="space-y-6">
            {{!-- Vehicle & Driver Assignment --}}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Vehicle & Driver</h2>
                </div>
                <div class="p-6">
                    {{#if this.route.bus}}
                    <div class="text-center mb-6">
                        <FaIcon @icon="bus" class="text-3xl text-blue-500 mb-2" />
                        <h3 class="text-lg font-medium text-gray-900">{{this.route.bus.name}}</h3>
                        <p class="text-sm text-gray-600">Capacity: {{this.route.bus.capacity}} seats</p>
                        <p class="text-sm text-gray-600">License: {{this.route.bus.license_plate}}</p>
                    </div>
                    {{else}}
                    <div class="text-center mb-6">
                        <FaIcon @icon="bus" class="text-3xl text-gray-300 mb-2" />
                        <p class="text-gray-600">No bus assigned</p>
                    </div>
                    {{/if}}

                    {{#if this.route.driver}}
                    <div class="text-center">
                        <FaIcon @icon="user" class="text-3xl text-green-500 mb-2" />
                        <h3 class="text-lg font-medium text-gray-900">{{this.route.driver.name}}</h3>
                        <p class="text-sm text-gray-600">{{this.route.driver.phone}}</p>
                        <p class="text-sm text-gray-600">{{this.route.driver.email}}</p>
                    </div>
                    {{else}}
                    <div class="text-center">
                        <FaIcon @icon="user" class="text-3xl text-gray-300 mb-2" />
                        <p class="text-gray-600">No driver assigned</p>
                    </div>
                    {{/if}}

                    {{#unless (and this.route.bus this.route.driver)}}
                    <div class="mt-4">
                        <LinkTo @route="school-transport.routes.edit" @model={{this.route.id}}
                            class="btn btn-outline w-full">
                            <FaIcon @icon="edit" class="mr-2" />
                            Assign Vehicle & Driver
                        </LinkTo>
                    </div>
                    {{/unless}}
                </div>
            </div>

            {{!-- Route Statistics --}}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Route Statistics</h2>
                </div>
                <div class="p-6">
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Total Distance:</span>
                            <span class="text-sm font-medium">{{this.route.distance}} miles</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Total Stops:</span>
                            <span class="text-sm font-medium">{{this.route.stops.length}}</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Capacity Used:</span>
                            <span class="text-sm font-medium">
                                {{#if this.route.max_capacity}}
                                {{percentage this.route.student_count this.route.max_capacity}}%
                                {{else}}
                                N/A
                                {{/if}}
                            </span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Avg. Trip Time:</span>
                            <span class="text-sm font-medium">{{this.route.estimated_duration}} min</span>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Quick Actions --}}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Quick Actions</h2>
                </div>
                <div class="p-4 space-y-3">
                    <button class="w-full btn btn-outline text-left" {{on "click" this.startRoute}}>
                        <FaIcon @icon="play" class="mr-2" />
                        Start Route
                    </button>
                    <button class="w-full btn btn-outline text-left" {{on "click" this.viewAttendance}}>
                        <FaIcon @icon="calendar-check" class="mr-2" />
                        View Attendance
                    </button>
                    <button class="w-full btn btn-outline text-left" {{on "click" this.sendNotification}}>
                        <FaIcon @icon="bell" class="mr-2" />
                        Send Notification
                    </button>
                    <button class="w-full btn btn-outline text-left" {{on "click" this.generateReport}}>
                        <FaIcon @icon="file-alt" class="mr-2" />
                        Generate Report
                    </button>
                    <button class="w-full btn btn-outline text-left" {{on "click" this.duplicateRoute}}>
                        <FaIcon @icon="copy" class="mr-2" />
                        Duplicate Route
                    </button>
                </div>
            </div>

            {{!-- Special Instructions --}}
            {{#if this.route.special_instructions}}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Special Instructions</h2>
                </div>
                <div class="p-6">
                    <p class="text-sm text-gray-900">{{this.route.special_instructions}}</p>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>