{{!-- New Route Template --}}
<div class="school-transport-route-new">
    {{!-- Page Header --}}
    <div class="page-header">
        <div class="flex items-center justify-between mb-6">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Create New Route</h1>
                <p class="text-gray-600 mt-1">Set up a new transportation route for students</p>
            </div>
            <LinkTo @route="school-transport.routes.index" class="btn btn-outline">
                <FaIcon @icon="arrow-left" class="mr-2" />
                Back to Routes
            </LinkTo>
        </div>
    </div>

    {{!-- Route Form --}}
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <form {{on "submit" this.saveRoute}}>
            <div class="p-6">
                {{!-- Basic Information --}}
                <div class="section-header mb-6">
                    <h2 class="text-lg font-semibold text-gray-900">Basic Information</h2>
                    <p class="text-sm text-gray-600">Route name, description, and basic settings</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    <div class="form-group">
                        <label class="form-label required">Route Name</label>
                        <Input @type="text" @value={{this.route.name}}
                            @placeholder="e.g., North Elementary Morning Route"
                            class="form-input {{if this.errors.name 'border-red-500'}}" required />
                        {{#if this.errors.name}}
                        <p class="form-error">{{this.errors.name}}</p>
                        {{/if}}
                    </div>

                    <div class="form-group">
                        <label class="form-label required">Route Type</label>
                        <select class="form-select {{if this.errors.route_type 'border-red-500'}}" {{on "change"
                            this.updateRouteType}} required>
                            <option value="">Select Route Type</option>
                            <option value="morning" selected={{eq this.route.route_type "morning" }}>Morning Pickup
                            </option>
                            <option value="afternoon" selected={{eq this.route.route_type "afternoon" }}>Afternoon
                                Dropoff</option>
                            <option value="both" selected={{eq this.route.route_type "both" }}>Round Trip</option>
                        </select>
                        {{#if this.errors.route_type}}
                        <p class="form-error">{{this.errors.route_type}}</p>
                        {{/if}}
                    </div>

                    <div class="form-group md:col-span-2">
                        <label class="form-label required">Description</label>
                        <Textarea @value={{this.route.description}} @rows={{3}}
                            @placeholder="Describe the route, stops, and any special instructions"
                            class="form-textarea {{if this.errors.description 'border-red-500'}}" required />
                        {{#if this.errors.description}}
                        <p class="form-error">{{this.errors.description}}</p>
                        {{/if}}
                    </div>

                    <div class="form-group">
                        <label class="form-label">School</label>
                        <select class="form-select" {{on "change" this.updateSchool}}>
                            <option value="">Select School (Optional)</option>
                            {{#each this.schools as |school|}}
                            <option value={{school.id}} selected={{eq this.route.school_id school.id}}>
                                {{school.name}}
                            </option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Maximum Capacity</label>
                        <Input @type="number" @value={{this.route.max_capacity}} @min={{1}}
                            @placeholder="Maximum number of students" class="form-input" />
                    </div>
                </div>

                {{!-- Schedule Information --}}
                <div class="section-header mb-6">
                    <h2 class="text-lg font-semibold text-gray-900">Schedule Information</h2>
                    <p class="text-sm text-gray-600">Route timing and operational details</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                    {{#if (or (eq this.route.route_type "morning") (eq this.route.route_type "both"))}}
                    <div class="form-group">
                        <label class="form-label">Morning Start Time</label>
                        <Input @type="time" @value={{this.route.morning_start_time}} class="form-input" />
                    </div>
                    {{/if}}

                    {{#if (or (eq this.route.route_type "afternoon") (eq this.route.route_type "both"))}}
                    <div class="form-group">
                        <label class="form-label">Afternoon Start Time</label>
                        <Input @type="time" @value={{this.route.afternoon_start_time}} class="form-input" />
                    </div>
                    {{/if}}

                    <div class="form-group">
                        <label class="form-label">Estimated Duration (minutes)</label>
                        <Input @type="number" @value={{this.route.estimated_duration}} @min={{1}} class="form-input" />
                    </div>
                </div>

                {{!-- Route Path --}}
                <div class="section-header mb-6">
                    <h2 class="text-lg font-semibold text-gray-900">Route Path</h2>
                    <p class="text-sm text-gray-600">Define the route stops and waypoints</p>
                </div>

                <div class="mb-8">
                    <div class="border-2 border-dashed border-gray-300 rounded-lg p-6">
                        <div class="text-center">
                            <FaIcon @icon="map-marked-alt" class="text-4xl text-gray-400 mb-4" />
                            <h3 class="text-lg font-medium text-gray-900 mb-2">Interactive Route Mapping</h3>
                            <p class="text-gray-600 mb-4">
                                Click on the map to add stops, or enter addresses below to build your route.
                            </p>
                            <div class="bg-gray-100 rounded-lg p-4 mb-4">
                                <p class="text-sm text-gray-600">
                                    Map integration will be implemented here. For now, you can add stops manually below.
                                </p>
                            </div>
                        </div>
                    </div>

                    {{!-- Manual Stop Entry --}}
                    <div class="mt-6">
                        <h4 class="text-md font-medium text-gray-900 mb-4">Route Stops</h4>
                        <div class="space-y-4" id="stops-container">
                            {{#each this.route.stops as |stop index|}}
                            <div class="flex items-center space-x-4 p-4 bg-gray-50 rounded-lg">
                                <div
                                    class="flex-shrink-0 w-8 h-8 rounded-full bg-blue-500 text-white flex items-center justify-center text-sm font-medium">
                                    {{add index 1}}
                                </div>
                                <div class="flex-1">
                                    <Input @type="text" @value={{stop.address}} @placeholder="Stop address"
                                        class="form-input" {{on "input" (fn this.updateStopAddress index)}} />
                                </div>
                                <div class="flex-shrink-0">
                                    <Input @type="time" @value={{stop.time}} @placeholder="Time" class="form-input w-32"
                                        {{on "input" (fn this.updateStopTime index)}} />
                                </div>
                                <button type="button" class="btn btn-sm btn-danger" {{on "click" (fn this.removeStop
                                    index)}}>
                                    <FaIcon @icon="trash" />
                                </button>
                            </div>
                            {{/each}}
                        </div>

                        <button type="button" class="btn btn-outline mt-4" {{on "click" this.addStop}}>
                            <FaIcon @icon="plus" class="mr-2" />
                            Add Stop
                        </button>
                    </div>
                </div>

                {{!-- Vehicle Assignment --}}
                <div class="section-header mb-6">
                    <h2 class="text-lg font-semibold text-gray-900">Vehicle Assignment</h2>
                    <p class="text-sm text-gray-600">Assign a bus and driver to this route</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    <div class="form-group">
                        <label class="form-label">Assigned Bus</label>
                        <select class="form-select" {{on "change" this.updateBus}}>
                            <option value="">Select Bus (Optional)</option>
                            {{#each this.availableBuses as |bus|}}
                            <option value={{bus.id}} selected={{eq this.route.bus_id bus.id}}>
                                {{bus.name}} ({{bus.capacity}} seats)
                            </option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Assigned Driver</label>
                        <select class="form-select" {{on "change" this.updateDriver}}>
                            <option value="">Select Driver (Optional)</option>
                            {{#each this.availableDrivers as |driver|}}
                            <option value={{driver.id}} selected={{eq this.route.driver_id driver.id}}>
                                {{driver.name}}
                            </option>
                            {{/each}}
                        </select>
                    </div>
                </div>

                {{!-- Route Settings --}}
                <div class="section-header mb-6">
                    <h2 class="text-lg font-semibold text-gray-900">Route Settings</h2>
                    <p class="text-sm text-gray-600">Additional route configuration</p>
                </div>

                <div class="space-y-6 mb-8">
                    <div class="form-group">
                        <label class="flex items-center">
                            <input type="checkbox" checked={{this.route.is_active}} {{on "change" this.toggleActive}}
                                class="form-checkbox" />
                            <span class="ml-2">Route is active and available for assignments</span>
                        </label>
                    </div>

                    <div class="form-group">
                        <label class="flex items-center">
                            <input type="checkbox" checked={{this.route.allow_standby}} {{on "change"
                                this.toggleStandby}} class="form-checkbox" />
                            <span class="ml-2">Allow standby students when capacity is reached</span>
                        </label>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Special Instructions</label>
                        <Textarea @value={{this.route.special_instructions}} @rows={{3}}
                            @placeholder="Any special instructions for drivers or safety notes" class="form-textarea" />
                    </div>
                </div>
            </div>

            {{!-- Form Actions --}}
            <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end space-x-3">
                <LinkTo @route="school-transport.routes.index" class="btn btn-outline">
                    Cancel
                </LinkTo>
                <button type="submit" class="btn btn-primary" disabled={{this.isSaving}}>
                    {{#if this.isSaving}}
                    <FaIcon @icon="spinner" @spin={{true}} class="mr-2" />
                    Creating Route...
                    {{else}}
                    <FaIcon @icon="save" class="mr-2" />
                    Create Route
                    {{/if}}
                </button>
            </div>
        </form>
    </div>
</div>